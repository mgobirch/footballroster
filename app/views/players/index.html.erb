<h1>Listing players</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Position</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Year</th>
		<th>Roster</th>
		<th></th>
		<th></th>
		<th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.number %></td>
    <td><%= player.position %></td>
		<td><%= player.height %></td>
    <td><%= player.weight %></td>
		<td><%= player.year_of_eligibility %></td>
		<td><%= player.roster.name %></td>
		<td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

